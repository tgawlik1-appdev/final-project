<!-- Validation failure messages -->
<% if @meeting.errors.any? %>
  <% @meeting.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit meeting #<%= @meeting.id %>
</h1>

<hr>

<form action="/update_meeting/<%= @meeting.id %>" method="post">
  <!-- Label and input for first_participant -->
  <div class="form-group">
    <label for="first_participant">
      First participant
    </label>

    <input type="text" id="first_participant" name="first_participant" class="form-control" value="<%= @meeting.first_participant %>">
  </div>

  <!-- Label and input for second_participant -->
  <div class="form-group">
    <label for="second_participant">
      Second participant
    </label>

    <input type="text" id="second_participant" name="second_participant" class="form-control" value="<%= @meeting.second_participant %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update meeting
  </button>
</form>

<hr>

<a href="/meetings">
  Go back
</a>
