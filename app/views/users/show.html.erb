  </dd>
  <dt>
    Last Name
  </dt>
  <dd>
    <%= @user.last_name %>
  </dd>
  <dt>
    Email
  </dt>
  <dd>
    <%= @user.email %>
  </dd>
  <dt>
    Network Affiliation
  </dt>
  <dd>
    <%= @user.network_affiliation %>
  </dd>

</dl>




